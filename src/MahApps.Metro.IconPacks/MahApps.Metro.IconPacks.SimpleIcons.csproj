<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="MSBuild.Sdk.Extras">
    <!-- Project properties -->
    <PropertyGroup>
        <DefineConstants>SIMPLEICONS</DefineConstants>
        <ExtrasDefaultPageExcludes>$(ExtrasDefaultPageExcludes);$(MSBuildProjectDirectory)\Themes\**\*.*;$(MSBuildProjectDirectory)\Converter\*.xaml</ExtrasDefaultPageExcludes>
        <AssemblyName>MahApps.Metro.IconPacks.SimpleIcons</AssemblyName>
        <Titel>MahApps.Metro.IconPacks.SimpleIcons</Titel>
        <RootNamespace>MahApps.Metro.IconPacks</RootNamespace>
    </PropertyGroup>
    <!-- WPF Items include -->
    <ItemGroup Condition="'$(_SdkShortFrameworkIdentifier)' != 'uap'">
        <Compile Remove="*.cs"/>
        <Compile Remove="Attributes\DescriptionAttribute.cs"/>
        <Compile Include="PackIconControl.cs;PackIconExtension.cs"/>

        <Compile Include="*SimpleIcons*.cs"/>
        <Page Include="Themes\WPF\SimpleIcons\*.xaml" Link="Themes\%(RecursiveDir)%(Filename)%(Extension)" SubType="Designer" Generator="MSBuild:Compile"/>
        <Page Include="Themes\WPF\PackIconSimpleIcons.xaml" Link="Themes\%(RecursiveDir)%(Filename)%(Extension)" SubType="Designer" Generator="MSBuild:Compile"/>
    </ItemGroup>
    <!-- UWP Items include -->
    <ItemGroup Condition="'$(_SdkShortFrameworkIdentifier)' == 'uap'">
        <Compile Remove="*.cs"/>
        <Compile Remove="Themes\UAP\**\*.*;Themes\WPF\**\*.*"/>
        <Compile Remove="Converter\MarkupConverter.cs;*Extension*.cs"/>
        <Compile Include="PackIconControl.cs"/>
        <Compile Include="..\paket-files\uwp\ControlzEx\ControlzEx\src\ControlzEx\PackIconBase.cs">
            <Link>ControlzEx\PackIconBase.cs</Link>
        </Compile>
        <EmbeddedResource Include="**\*.rd.xml" />
        <Page Include="Converter\*.xaml" SubType="Designer" Generator="MSBuild:Compile"/>

        <Compile Include="*SimpleIcons*.cs" Exclude="Converter\MarkupConverter.cs;*Extension*.cs"/>
        <Page Include="Themes\UAP\SimpleIcons\*.xaml" Link="Themes\%(RecursiveDir)%(Filename)%(Extension)" SubType="Designer" Generator="MSBuild:Compile"/>
        <Page Include="Themes\UAP\PackIconSimpleIcons.xaml" Link="Themes\%(RecursiveDir)%(Filename)%(Extension)" SubType="Designer" Generator="MSBuild:Compile"/>
    </ItemGroup>
    <ItemGroup>
        <None Include="paket.references"/>
    </ItemGroup>
    <Import Project="..\.paket\Paket.Restore.targets"/>
</Project>