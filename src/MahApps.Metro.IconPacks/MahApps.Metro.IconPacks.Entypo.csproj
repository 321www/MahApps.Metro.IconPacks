<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="MSBuild.Sdk.Extras">
    <!-- Project properties -->
    <PropertyGroup>
        <DefineConstants>ENTYPO</DefineConstants>
        <TargetFrameworks>uap10.0;net47;net46;net45;net40</TargetFrameworks>
        <DefaultWpfPageExcludes>$(DefaultWpfPageExcludes);$(MSBuildProjectDirectory)/Themes/**/*.*;$(MSBuildProjectDirectory)/Converter/*.xaml</DefaultWpfPageExcludes>
        <AssemblyName>MahApps.Metro.IconPacks.Entypo</AssemblyName>
        <RootNamespace>MahApps.Metro.IconPacks</RootNamespace>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
    </PropertyGroup>
    <!-- Items include -->
    <ItemGroup Condition="'$(TargetFramework)' == 'uap10.0'">
        <Compile Remove="$(MSBuildProjectDirectory)/*.cs" />

        <Compile Include="$(MSBuildProjectDirectory)/PackIconControl.cs" />
        <Compile Include="$(MSBuildProjectDirectory)/*Entypo*.cs" />
        <Compile Include="..\paket-files\uwp\ControlzEx\ControlzEx\src\ControlzEx\PackIconBase.cs">
            <Link>ControlzEx/PackIconBase.cs</Link>
        </Compile>

        <Compile Remove="$(MSBuildProjectDirectory)/Converter/MarkupConverter.cs;$(MSBuildProjectDirectory)/*Extension*.cs" />

        <Page Include="Converter\*.xaml" SubType="Designer" Generator="MSBuild:Compile" />
        <Page Include="Themes\UAP\Entypo\*.xaml" Link="Themes\%(RecursiveDir)%(Filename)%(Extension)" SubType="Designer" Generator="MSBuild:Compile" />
        <Page Include="Themes\UAP\PackIconEntypo.xaml" Link="Themes\%(RecursiveDir)%(Filename)%(Extension)" SubType="Designer" Generator="MSBuild:Compile" />
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework)' != 'uap10.0'">
        <Compile Remove="$(MSBuildProjectDirectory)/*.cs" />
        <Compile Remove="$(MSBuildProjectDirectory)/Attributes/DescriptionAttribute.cs" />

        <Compile Include="$(MSBuildProjectDirectory)/PackIconControl.cs;$(MSBuildProjectDirectory)/PackIconExtension.cs" />
        <Compile Include="$(MSBuildProjectDirectory)/*Entypo*.cs" />

        <Page Include="Themes\WPF\Entypo\*.xaml" Link="Themes\%(RecursiveDir)%(Filename)%(Extension)" SubType="Designer" Generator="MSBuild:Compile" />
        <Page Include="Themes\WPF\PackIconEntypo.xaml" Link="Themes\%(RecursiveDir)%(Filename)%(Extension)" SubType="Designer" Generator="MSBuild:Compile" />
    </ItemGroup>

    <ItemGroup>
        <Compile Include="..\GlobalAssemblyInfo.cs">
            <Link>Properties\GlobalAssemblyInfo.cs</Link>
        </Compile>
        <None Include="paket.references" />
    </ItemGroup>
    <ItemGroup>
        <Compile DependentUpon="%(Filename)" SubType="Code" Update="$(MSBuildProjectDirectory)\obj\**\*.g$(_SdkLanguageExtension)" />
    </ItemGroup>
    <Import Project="..\.paket\Paket.Restore.targets" />
</Project>