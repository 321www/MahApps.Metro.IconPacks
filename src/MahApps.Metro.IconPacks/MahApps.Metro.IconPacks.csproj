<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="MSBuild.Sdk.Extras">
    <!-- Project properties -->
    <PropertyGroup>
        <DefineConstants>ALL</DefineConstants>
        <TargetFrameworks>net47;net46;net45;net40</TargetFrameworks>
        <AssemblyName>MahApps.Metro.IconPacks</AssemblyName>
        <RootNamespace>MahApps.Metro.IconPacks</RootNamespace>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <DefaultWpfPageExcludes>$(DefaultWpfPageExcludes);$(MSBuildProjectDirectory)/Themes/**/Generic.xaml</DefaultWpfPageExcludes>
    </PropertyGroup>
    <!-- Items include -->
    <ItemGroup>
        <Page Include="$(MSBuildProjectDirectory)/Themes/Generic.xaml" SubType="Designer" Generator="MSBuild:Compile"/>
        <Compile Include="..\GlobalAssemblyInfo.cs">
            <Link>Properties\GlobalAssemblyInfo.cs</Link>
        </Compile>
        <None Include="paket.references"/>
    </ItemGroup>
    <ItemGroup>
        <Compile DependentUpon="%(Filename)" SubType="Code" Update="$(MSBuildProjectDirectory)\obj\**\*.g$(_SdkLanguageExtension)"/>
    </ItemGroup>
    <Import Project="..\.paket\Paket.Restore.targets"/>
</Project>