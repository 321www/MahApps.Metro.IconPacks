<Project>
    <!-- workaround for https://github.com/NuGet/Home/issues/5894 -->
    <PropertyGroup>
        <_SdkLanguageName>CSharp</_SdkLanguageName>
        <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
    </PropertyGroup>
    <Import Condition=" '$(MSBuildProjectExtension)' == '.tmp_proj'" Project="$(MSBuildProjectDirectory)\obj\*.props"/>
    <!-- Project properties -->
    <PropertyGroup>
        <TargetFrameworks>net47;net46;net45;net40;uap10.0</TargetFrameworks>
        <OutputPath>$(MSBuildProjectDirectory)\bin\$(Configuration)\$(MSBuildProjectName)</OutputPath>
        <IntermediateOutputPath>$(MSBuildProjectDirectory)\obj\$(Configuration)\$(MSBuildProjectName)</IntermediateOutputPath>
        <AppendTargetFrameworkToOutputPath>true</AppendTargetFrameworkToOutputPath>
        <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
        <GenerateDocumentationFile>false</GenerateDocumentationFile>
        <Configuration Condition="'$(Configuration)' == ''">Release</Configuration>
    </PropertyGroup>
    <!-- AssemblyInfo -->
    <PropertyGroup>
        <Company>MahApps</Company>
        <Product>MahApps.Metro.IconPacks</Product>
        <Copyright>Copyright Â© 2016 - $([System.DateTime]::Today.ToString(yyyy)) MahApps.Metro</Copyright>
        <Description>IconPacks for stylish awesome WPF and UWP applications.</Description>
        <AssemblyVersion Condition="'$(AssemblyVersion)' == ''">2.4.0.0</AssemblyVersion>
        <FileVersion Condition="'$(FileVersion)' == ''">2.4.0.0</FileVersion>
        <InformationalVersion Condition="'$(InformationalVersion)' == ''">2.4.0.0</InformationalVersion>
    </PropertyGroup>
    <ItemGroup>
        <None Remove="**\*.png;**\*.jpg;**\*.ico"/>
        <Resource Include="**\*.png;**\*.jpg;**\*.ico"/>
    </ItemGroup>
    <!-- workaround for https://github.com/NuGet/Home/issues/5894 -->
    <Import Condition=" '$(MSBuildProjectExtension)' == '.tmp_proj'" Project="$(MSBuildProjectDirectory)\obj\*.targets"/>
</Project>